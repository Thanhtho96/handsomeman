<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_ripple_transparent_color_radius_bg"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/textViewItemSkillNameEdit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/design_4_7sp"
        tools:text="Fixing windows" />

    <ImageButton
        android:id="@+id/imageButtonDeleteSkillEdit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_ripple_transparent_color_radius_bg"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/del_red" />
</LinearLayout>